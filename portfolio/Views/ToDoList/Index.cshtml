@model List<ToDoList>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Layout/Index.cshtml";
    var count = 0;
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">TodoLists</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yapılacaklar Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Başlık</th>
									<th scope="col">Durumu</th>
									<th scope="col">Tarih</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
                                {
                                    count = count + 1;

									<tr>
										<td>@count</td>
										<td>@item.Title</td>
										<td>@item.Status</td>
										<td><a href="/ToDoList/DeleteToDoList/@item.ToDoListId" class="btn btn-danger">Sil</a></td>
										@if (item.Status == true)
										{
											<td><a href="/ToDoList/ChangesToDo/@item.ToDoListId" class="btn btn-danger">Tamamlanmadı Olarak Güncelle</a></td>
										}
										else
										{
											<td><a href="/ToDoList/ChangesToDo/@item.ToDoListId" class="btn btn-success">Tamamlandı Olarak Güncelle</a></td>
										}
										<td><a href="/ToDoList/UpdateToDoList/@item.ToDoListId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}

							</tbody>
						</table>
						<a href="/ToDoList/NewToDoList/" class="btn btn-info">Yeni ToDo Ekle</a>
					</div>
				</div>

			</div>

		</div>
	</div>
</div>



